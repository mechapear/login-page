{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    "esModuleInterop": true,
    // allow using .ts extensions in import/export
    "allowImportingTsExtensions": true,
    // nodenext - supports both ECMAScript imports and CommonJS require
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
